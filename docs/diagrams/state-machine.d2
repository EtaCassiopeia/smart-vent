direction: right

closed: Closed {
  style.fill: "#2d0a0a"
  style.stroke: "#e74c3c"
}
open: Open {
  style.fill: "#0d2818"
  style.stroke: "#2ecc71"
}
partial: Partial {
  style.fill: "#2d2d00"
  style.stroke: "#f1c40f"
}
moving: Moving {
  style.fill: "#16213e"
  style.stroke: "#3a7bd5"
}

closed -> moving: "set_target(180)"
moving -> open: reached target
open -> moving: "set_target(90)"
moving -> closed: reached target
open -> moving: "set_target(N)"
moving -> partial: reached target
closed -> moving: "set_target(N)" {
  style.stroke-dash: 3
}
