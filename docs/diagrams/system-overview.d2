direction: right

home_network: HOME NETWORK {
  rpi: Raspberry Pi 4B {
    style.stroke: "#3a7bd5"

    ha: Home Assistant {
      style.stroke: "#e68a00"
      vc: Vent Control Component
    }

    hub: Hub Service {
      style.stroke: "#2ecc71"
      db: SQLite DB
      coap: CoAP Client
    }

    otbr: OTBR (Docker) {
      style.stroke: "#e74c3c"
      dongle: nRF52840 Dongle\n(RCP firmware)
    }

    ha.vc -> hub.coap: polls
  }

  mesh: Thread Mesh Network {
    style.stroke: "#9b59b6"

    v1: Vent 1 {
      mcu1: ESP32-C6
      s1: Servo
      mcu1 -> s1: PWM
    }
    v2: Vent 2 {
      mcu2: ESP32-C6
      s2: Servo
      mcu2 -> s2: PWM
    }
    vn: Vent N {
      mcun: ESP32-C6
      sn: Servo
      mcun -> sn: PWM
    }
  }

  rpi.hub.coap -> mesh: CoAP over IPv6 {
    style.stroke-dash: 3
  }
  rpi.otbr.dongle -> mesh: 802.15.4 radio {
    style.stroke: "#e74c3c"
  }
}
