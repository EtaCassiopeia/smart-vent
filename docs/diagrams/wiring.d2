direction: right

esp32: ESP32-C6 {
  style.fill: "#16213e"
  style.stroke: "#3a7bd5"

  gpio6: GPIO 6\n(LEDC PWM Ch 0) {
    style.fill: "#1a3a5c"
  }
  v5: 5V / VIN {
    style.fill: "#0d2818"
  }
  gnd: GND {
    style.fill: "#1a1a1a"
  }
}

servo: SG90 Servo {
  style.fill: "#1a0a2e"
  style.stroke: "#9b59b6"

  signal: Signal\n(Orange wire) {
    style.fill: "#2d1b00"
  }
  vcc: VCC\n(Red wire) {
    style.fill: "#2d0a0a"
  }
  ground: GND\n(Brown wire) {
    style.fill: "#1a1a1a"
  }
}

esp32.gpio6 -> servo.signal: PWM signal {
  style.stroke: "#e68a00"
  style.stroke-width: 2
}
esp32.v5 -> servo.vcc: +5V power {
  style.stroke: "#e74c3c"
  style.stroke-width: 2
}
esp32.gnd -> servo.ground: ground {
  style.stroke: "#95a5a6"
  style.stroke-width: 2
}
